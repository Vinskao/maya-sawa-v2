# Django Settings
# ------------------------------------------------------------------------------
DJANGO_DEBUG=True
DJANGO_READ_DOT_ENV_FILE=True
MAYA_V2_SECRET_KEY=your-secret-key-here
DJANGO_EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True
MAYA_V2_ADMIN_URL=your-admin-url-here
DJANGO_ADMIN_FORCE_ALLAUTH=False

# CORS Settings (for local frontend development)
# ------------------------------------------------------------------------------
CORS_ALLOWED_ORIGINS=http://localhost:4321,http://127.0.0.1:4321

# Database Configuration
# ------------------------------------------------------------------------------
# Option 1: Use DATABASE_URL (recommended for simple setups)
DATABASE_URL=postgres://user:password@localhost:5432/maya_sawa_v2

# Option 2: Use separate DB variables (recommended for production)
# DB_CONNECTION=pgsql
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=maya_sawa_v2
# DB_USERNAME=user
# DB_PASSWORD=password
# DB_SSLMODE=require

# Database Connection Pool Settings
CONN_MAX_AGE=60

# Redis & Celery Configuration
# ------------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# API Security Settings
# ------------------------------------------------------------------------------
# Set to False to disable authentication, True to enable
# 設置為False禁用認證，True啟用認證
API_REQUIRE_AUTHENTICATION=False
API_REQUIRE_CSRF=False
API_RATE_LIMIT_ENABLED=False
API_RATE_LIMIT_PER_MINUTE=60
# API_RATE_LIMIT_USER_PER_MINUTE=60
# API_RATE_LIMIT_ANON_PER_MINUTE=30

# AI Provider API Keys
# ------------------------------------------------------------------------------
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_ORGANIZATION=your-openai-org-id-here
OPENAI_API_BASE=https://api.openai.com/v1

GOOGLE_API_KEY=your-google-api-key-here
QWEN_API_KEY=your-qwen-api-key-here

# AI Provider Configuration
# ------------------------------------------------------------------------------
# Format: PROVIDER_NAME_MODELS=model1,model2,model3
# Format: PROVIDER_NAME_DEFAULT_MODEL=model1

# OpenAI Configuration
OPENAI_MODELS=gpt-4o-mini,gpt-4o,gpt-4.1-nano,gpt-3.5-turbo
OPENAI_DEFAULT_MODEL=gpt-4o-mini
OPENAI_AVAILABLE_MODELS=gpt-4o-mini,gpt-4.1-nano

# Google Gemini Configuration
GEMINI_MODELS=gemini-1.5-flash,gemini-1.5-pro
GEMINI_DEFAULT_MODEL=gemini-1.5-flash
GEMINI_AVAILABLE_MODELS=gemini-1.5-flash

# Qwen Configuration
QWEN_MODELS=qwen-turbo,qwen-plus
QWEN_DEFAULT_MODEL=qwen-turbo
QWEN_AVAILABLE_MODELS=qwen-turbo

# Enabled Providers (comma-separated list)
ENABLED_PROVIDERS=openai

# Production Settings (commented out for development)
# ------------------------------------------------------------------------------
# DJANGO_SETTINGS_MODULE=config.settings.production
# DJANGO_ALLOWED_HOSTS=.example.com
# DJANGO_SECURE_SSL_REDIRECT=False
# WEB_CONCURRENCY=4

# Additional Settings
# ------------------------------------------------------------------------------
# Chat History TTL (in seconds, default: 7 days)
CHAT_HISTORY_TTL_SECONDS=604800

# OpenAI Embedding Model (for knowledge base)
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Mailgun Configuration (optional, for email notifications)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=your-mailgun-domain
# MAILGUN_API_URL=https://api.mailgun.net/v3
# DJANGO_SERVER_EMAIL=noreply@yourdomain.com
